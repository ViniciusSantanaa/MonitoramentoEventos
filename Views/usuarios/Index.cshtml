@model IEnumerable<MonitoramentoEventos.Models.Usuario>

    @{
    ViewData["Title"] = "Usuários";
    }

    <h1 class="text-2xl font-bold mb-4">Lista de Usuários</h1>

    <table class="table-auto w-full border-collapse border border-gray-400">
        <thead>
            <tr class="bg-gray-200">
                <th class="border border-gray-400 px-4 py-2">ID</th>
                <th class="border border-gray-400 px-4 py-2">Nome</th>
                b
                <th class="border border-gray-400 px-4 py-2">Total de Alertas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
        {
            <tr>
                <td class="border border-gray-400 px-4 py-2">@usuario.Id</td>
                <td class="border border-gray-400 px-4 py-2">@usuario.Nome</td>
                <td class="border border-gray-400 px-4 py-2">@usuario.Alertas?.Count ?? 0</td>
            </tr>
        }
        </tbody>
    </table>
